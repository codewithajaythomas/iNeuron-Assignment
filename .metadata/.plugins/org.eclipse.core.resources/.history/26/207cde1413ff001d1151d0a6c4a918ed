package com.codewithajay;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;
import org.springframework.context.ConfigurableApplicationContext;

import com.codewithajay.dao.IStudentDao;
import com.codewithajay.model.Student;

@SpringBootApplication
public class JavaFinalProjectQ21Application {

	public static void main(String[] args) {
		ConfigurableApplicationContext container = SpringApplication.run(JavaFinalProjectQ21Application.class, args);
		Student student = container.getBean(Student.class);
		IStudentDao studentDao = container.getBean(IStudentDao.class);
		student.setSname("Chacko");
		student.setSage(23);
		student.setSaddress("Kerala");
		studentDao.save(student);
		container.close();
	}

}
