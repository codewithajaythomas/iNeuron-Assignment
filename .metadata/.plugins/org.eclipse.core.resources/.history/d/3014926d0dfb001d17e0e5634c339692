package com.codewithajay.findelements;

import java.util.Scanner;

public class DemoApp {
	public static void main(String[] args) {
		
		String inputValues="";
		int number=0,largest = -1,secondLargest = -1,smallest=-1,secondSmallest=-1;
		
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter a set of integers : ");
		inputValues = scan.nextLine();
		
		for(String value : inputValues.split(" ")) {
			try {
				number = Integer.parseInt(value);
			}catch(Exception e) {
				continue;
			}
			
			if(largest == -1 && secondLargest==-1 && smallest==-1 && secondSmallest==-1) {				
				largest = secondLargest=secondSmallest = smallest = number;
				continue;
			}
			
			if(number>largest) {
				largest = number;
			}else if(number<largest && number>secondLargest) {
				secondLargest = number;
			}
			
			if(number<smallest) {
				smallest = number;
			}else if(number>smallest && number<secondSmallest) {
				secondSmallest = number;
			}
		}
		
		System.out.println("Second largest : "+secondLargest);
		System.out.println("Second smallest : "+secondSmallest);
	}

}
